{
	"root": true,
	"parser": "@typescript-eslint/parser",
	"plugins": ["@typescript-eslint"],
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/eslint-recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"rules": {
		"indent": ["error", "tab", { "SwitchCase": 1 }],
		"quotes": [
			"error", 
			"double",
			{
			  "allowTemplateLiterals": true
			}
		],
		"semi": ["error", "always"],
		"no-fallthrough": "off"
	},
	"env": {
		"node": true
	}
}
